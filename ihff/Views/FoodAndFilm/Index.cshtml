@using ihff.Models
@Model ActivitiesPerLocationCopy

<h1>Blokken schema</h1>


<div id="wishlist-wrapper">
    <table id="wishlist-table">
        <thead>

        </thead>
        <tbody>
            
    @foreach (var list in Model.MasterList)
    {

        <tr>
            <th></th>
            @foreach (var activity in list)
            {
            <td>
                @activity.name
                <br />
                @activity.type
                <br />
                @activity.startTime.ToString("HH:mm")
                -
                @activity.endTime.ToString("HH:mm")
                <br />
                @activity.location
                <br />
                @Html.ActionLink("Add to wishlist", "AddItem", "Films", new { Id = activity.Id }, null)
            </td>
            }
        </tr>
        
    }
            


        </tbody>
    </table>
</div>


@foreach (var list in Model.MasterList)
{
    foreach (var activity in list)
    {
        @activity.name <br />
        @activity.type <br />
        @activity.startTime.ToString("HH:mm") <br />
        @activity.endTime.ToString("HH:mm")<br />
        @activity.location <br />
        @Html.ActionLink("Add to wishlist", "AddItem", "Films", new { Id = activity.Id }, null)
    }
}